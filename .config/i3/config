client.unfocused        "#505050" "#151515" "#505050" "#505050"		"#000000"
client.focused_inactive "#202020" "#202020" "#d0d0d0" "#202020"		"#202020"
client.placeholder      "#202020" "#202020" "#d0d0d0" "#202020"		"#202020"
client.urgent           "#ff5455" "#ff5455" "#151515" "#ff5455"		"#ff5455"

client.background #202020

