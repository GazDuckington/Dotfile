# SCRATCHPADS

# dropdown
exec --no-startup-id $TERMINAL --class 'dropdown'
bindsym $mod+Shift+F2 exec --no-startup-id "kitty --class dropdown"
for_window [class="dropdown"] floating enable
for_window [class="dropdown"] move scratchpad, move position 400px 25px, resize shrink height 2020px, resize grow width 800px
bindsym Mod1+F2 [class="dropdown"] scratchpad show
# musikcube
#exec --no-startup-id ~/bin/kitty-launch.sh musikcube
bindsym $mod+shift+F3 exec --no-startup-id kitty --class musikcube musikcube
for_window [instance="musikcube"] floating enable
for_window [instance="musikcube"] move scratchpad, move position 400px 25px, resize grow width 800px, resize grow height 700px
