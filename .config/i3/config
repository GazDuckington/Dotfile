# web search
bindsym Mod1+space exec --no-startup-id ~/scripts/web-search.sh
# bindsym Mod1+Shift+w exec --no-startup-id ~/scripts/buku_run
# change wallpaper
bindsym F2 exec --no-startup-id feh --bg-scale --randomize ~/Pictures/Wallpapers/*

# dropdown
exec --no-startup-id $TERMINAL --class 'dropdown'
for_window [class="dropdown"] floating enable
for_window [class="dropdown"] move scratchpad; [class="dropdown"] scratchpad show; move position 300px 22px; resize shrink height 2020px; resize grow width 800px; move scratchpad
bindsym F1 [class="dropdown"] scratchpad show

# flip through tabs
bindsym Mod1+Tab exec --no-startup-id i3flip next
# bindsym Ctrl+1 exec --no-startup-id i3flip prev
# change focus
bindsym $mod+a  exec --no-startup-id i3viswiz left
bindsym $mod+s  exec --no-startup-id i3viswiz down
bindsym $mod+w    exec --no-startup-id i3viswiz up
bindsym $mod+d exec --no-startup-id i3viswiz focus right

# move focused window
bindsym $mod+Shift+a  exec --no-startup-id i3Kornhe move --speed 10 left
bindsym $mod+Shift+s  exec --no-startup-id i3Kornhe move --speed 10 down
bindsym $mod+Shift+w 	 exec --no-startup-id i3Kornhe move --speed 10 up
bindsym $mod+Shift+d exec --no-startup-id i3Kornhe move --speed 10 right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+shift+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+t floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+p focus parent

# focus the child container
#bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
