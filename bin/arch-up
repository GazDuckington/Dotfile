#!/usr/bin/env bash
if ! updates=$(checkupdates+aur 2> /dev/null | wc -l); then
   updates=0
fi

if (( $updates == 0 )); then
   echo "<span color='#c9d1d9'> </span>$updates"
elif (( $updates > 10 )); then
   echo "<span color='#da3633'> </span>$updates"
else
   echo "<span color='#238636'> </span>$updates"
fi
