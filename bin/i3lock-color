#!/bin/sh
. ~/.config/dk/color.sh \
# Set the paused status of dunst
dunstctl set-paused true \

B='#00000000' # blank

i3lock \
--color=$bg \
--insidever-color=$B   \
--ringver-color=$green     \
\
--insidewrong-color=$B \
--ringwrong-color=$red   \
\
--inside-color=$B      \
--ring-color=$blue        \
--line-color=$B        \
--separator-color=$blue   \
\
--verif-color=$green        \
--wrong-color=$red        \
--time-color=$blue        \
--date-color=$blue        \
--layout-color=$blue      \
--keyhl-color=$bg       \
--bshl-color=$bg        \
\
--screen 1            \
--clock               \
--indicator           \
--time-str="%H:%M:%S"  \
--date-str="%A, %m %Y" \
--radius=140         \
\
--date-font="$FONT" \
--time-font="$FONT" \
--layout-font="$FONT" \
--verif-font="$FONT" \
--wrong-font="$FONT" \
--greeter-font="$FONT" \
--no-modkey-text \
\
-n; 
amixer set Master unmute \
dunstctl set-paused false \
sleep 1 \
exit
