#! /bin/sh

pgrep -x sxhkd >/dev/null || sxhkd &

bspc monitor -d 1 2 3 4 5 6

bspc config automatic_scheme=alternate
#bspc config initial_polarity second_child
#bspc config removal_adjustment false

bspc config border_width 1
bspc config window_gap 10
# bspc config border_radius        10
bspc config split_ratio 0.55
bspc config top_padding 20
bspc config borderless_monocle true
bspc config gapless_monocle true

bspc config focused_border_color \#4796d9
bspc config normal_border_color \#636c7e

bspc config external_rules_command $HOME/.config/bspwm/external_rules

# bsp-layout
bsp-layout set tall &
# -- --master-size 0.55 &

# polybar
~/.config/polybar/scripts/launch-polybar.sh bspbar &

# picom
picom --experimental-backends -b & 

# autostart
pgrep -x sxhkd >/dev/null || sxhkd &
/usr/lib/polkit-kde-authentication-agent-1 &
xsetroot -cursor_name left_ptr &
~/bin/autostart &
~/bin/disableETPS 0 &
nitrogen --restore &
killall -q clipit && clipit &
killall -q udiskie && udiskie -t &
