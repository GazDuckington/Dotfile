#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d 1 2 3 4 5

bspc config border_width	1
bspc config window_gap		2
bspc config split_ratio		0.52
bspc config top_padding     15

# colors
bspc config focused_border_color "#45A9F9"
bspc config normal_border_color  "#969696"
bspc config active_border_color  "#0FBDBD"

# rules
bspc config external_rules_command "~/.config/bspwm/ext_rules"


declare -a term=(kitty Alacritty)
for i in ${term[@]};do
	bspc rule -a $i desktop=1; done

declare -a editor=(VSCodium DesktopEditors)
for i in ${editor[@]}; do
	bspc rule -a $i desktop=2 follow=off focus=off; done

declare -a media=(musikcube Quodlibet Stremio)
for i in ${media[@]}; do
	bspc rule -a $i desktop=3 follow=off focus=off; done

declare -a utility=(Nemo Font-manager)
for i in ${utility[@]}; do
	bspc rule -a $i desktop=4; done

declare -a settings=(Lxappearance Kvantum\ Manager)
for i in ${settings[@]}; do
	bspc rule -a $i desktop=5; done

# rules/floater
bspc rule -a pulsemixer state=floating rectangle=600x300+500+50
bspc rule -a nmtui state=floating rectangle=600x500+500+50
bspc rule -a hint state=floating rectangle=800x800+500+50
bspc rule -a btop state=floating rectangle=700x700+500+50
bspc rule -a *:*:Android\ Emulator\ -* desktop=2 state=floating rectangle=800x800+400+50

# autostart
~/scripts/launch-polybar.sh &
xsetroot -cursor_name left_ptr &
pkill xidlehook &
~/scripts/idle.sh -s &
~/scripts/hsetrand.sh &
xinput set-prop "ETPS/2 Elantech TrackPoint" "Device Enabled" 0 &
xinput set-prop "ETPS/2 Elantech Touchpad" "Device Enabled" 0 &
xinput set-prop "AT Translated Set 2 keyboard" "Device Enabled" 0 &
dunst &
picom -b &
lxpolkit &
setterm -powersave off -blank 0 &
watch -n 30 ~/scripts/battery-check.sh &
