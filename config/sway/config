# Read `man 5 sway` for a complete reference.

include $HOME/.config/sway/config.d/*

# General settings
font pango:FiraCode Nerd Font Mono 8
focus_follows_mouse no
default_border pixel 1
floating_minimum_size 350 x 350
floating_maximum_size 850 x 850
focus_follows_mouse no
default_floating_border normal
title_align center
smart_borders on

# gaps
smart_gaps on
gaps inner 4
gaps outer 0

# Theme
set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome-schema icon-theme 'Tela-circle-dark'
}

# Colors
# Define colors variables:
set $blue		#1f6feb
set $red		#da3633
set $white		#f8f9fa
set $black		#0d1117
set $grey		#30363d

# define colors for windows:
#class		        	border		bground		text		indicator	child_border
client.focused		    $blue	    $blue	    $black		$blue		$blue
client.unfocused		$black	    $black	    $white		$black		$black
client.focused_inactive	$grey	    $grey	    $white		$grey		$grey
client.urgent		    $red	    $red	    $white		$red		$red

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    id bar1
    modifier $mod
    # mode hide
    position top
    swaybar_command waybar
}

bindsym Ctrl+$alt+w exec swaymsg bar mode toggle

