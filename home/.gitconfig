[init]
	defaultBranch = main

[user]
	name = Ghazy
	email = dianghazy@protonmail.com

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	side-by-side = true
	navigate = true
	light = false

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
[credential]
	helper = store
