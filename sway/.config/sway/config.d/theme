# Cursor theming
seat seat0 xcursor_theme Qogir-dark 0

# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Set inner/outer gaps
gaps inner 5
gaps outer 0

# border radius
corner_radius 5

# shadow
shadows on

# Hide titlebar on windows:
default_border pixel 1

# Default Font
font pango:BlexMono Nerd Font 8

# Thin borders:
smart_borders off

# Set wallpaper:
# exec_always ~/.config/sway/scripts/swaypaper.sh
# output * bg #11111b solid_color
output * bg ~/Pictures/Wallpapers/cat_hacknet.png fit

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

# target                 title     bg           text       indicator  border
client.focused           $surface2 $surface2    $subtext1  $surface2  $surface2
client.focused_inactive  $surface1 $surface1    $subtext0  $surface1  $surface1
client.unfocused         $surface0 $surface0    $subtext0  $surface0  $surface0
client.urgent            $peach    $peach       $base      $peach			$peach
client.placeholder       $overlay0 $base        $text      $overlay0  $overlay0
client.background        $base

